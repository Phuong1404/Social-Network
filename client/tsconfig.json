{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/views/*": [
        "src/views/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/common/*": [
        "src/common/*"
      ],
      "@/layout/*": [
        "src/layout/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedviews": true,
    "jsx": "preserve",
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_views"
  ]
}
